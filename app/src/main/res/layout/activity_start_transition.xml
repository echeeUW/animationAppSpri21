<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitytransition.StartTransitionActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivIcon0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        android:padding="@dimen/paddingMedium"/>
    <ImageView
        android:id="@+id/ivIcon1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:transitionName="ivIcon1"
        android:src="@drawable/ic_airline_seat_recline_extra_24"
        android:padding="@dimen/paddingMedium"/>
    <ImageView
        android:id="@+id/ivIcon2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_account_circle_24"
        android:padding="@dimen/paddingMedium"/>
    <ImageView
        android:id="@+id/ivIcon3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_expand_less_24"
        android:padding="@dimen/paddingMedium"/>

    <Button
        android:id="@+id/btnTransition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transition"/>

</LinearLayout>
